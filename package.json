{
  "name": "vibeflow",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "node scripts/build.js --watch",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "release": "npm run build && electron-builder --publish always"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.2",
    "electron": "^28.2.0",
    "node-pty": "^1.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.20.2",
    "typescript": "^5.4.5"
  },
  "build": {
    "appId": "com.vibeflow.app",
    "productName": "VibeFlow",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "ui/**",
      "assets/**",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/Vibeflow4X.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/Vibeflow4X.png"
    }
  }
}
