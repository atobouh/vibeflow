{
  "name": "vibeflow",
  "version": "0.1.0",
  "description": "Warp-inspired terminal IDE that captures intent, remembers context, and keeps developers in flow.",
  "author": "Dev Kuns (https://github.com/atobouh)",
  "private": true,
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "node scripts/build.js --watch",
    "start": "electron .",
    "prepare:icons": "node scripts/prepare-icons.js",
    "dist": "npm run prepare:icons && npm run build && electron-builder",
    "release": "npm run prepare:icons && npm run build && electron-builder --publish always"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.2",
    "ffmpeg-static": "^5.3.0",
    "node-pty": "^1.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "esbuild": "^0.27.3",
    "sharp": "^0.33.2",
    "typescript": "^5.4.5"
  },
  "build": {
    "appId": "com.vibeflow.app",
    "productName": "VibeFlow",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "ui/**",
      "assets/**",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}
